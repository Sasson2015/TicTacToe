<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#4d7bff">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#ffffff"
        android:id="@+id/iv0"
        android:tag="empty"
        android:contentDescription="0"
        android:layout_alignTop="@+id/iv1"
        android:layout_toLeftOf="@+id/iv1"
        android:layout_toStartOf="@+id/iv1" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#ffffff"
        android:tag="empty"
        android:contentDescription="1"
        android:id="@+id/iv1"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/iv3"
        android:layout_toRightOf="@+id/iv3"
        android:layout_toEndOf="@+id/iv3" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#ffffff"
        android:tag="empty"
        android:contentDescription="2"
        android:id="@+id/iv2"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/iv5"
        android:layout_alignLeft="@+id/iv5"
        android:layout_alignStart="@+id/iv5" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#ffffff"
        android:tag="empty"
        android:contentDescription="3"
        android:id="@+id/iv3"
        android:layout_alignTop="@+id/iv4"
        android:layout_toLeftOf="@+id/iv4"
        android:layout_toStartOf="@+id/iv4" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#ffffff"
        android:tag="empty"
        android:contentDescription="4"
        android:layout_margin="10dp"
        android:id="@+id/iv4"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#ffffff"
        android:tag="empty"
        android:contentDescription="5"
        android:id="@+id/iv5"
        android:layout_alignTop="@+id/iv4"
        android:layout_toRightOf="@+id/iv4"
        android:layout_toEndOf="@+id/iv4" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:tag="empty"
        android:contentDescription="6"
        android:id="@+id/iv6"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:layout_below="@+id/iv3"
        android:layout_alignLeft="@+id/iv3"
        android:layout_alignStart="@+id/iv3" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:tag="empty"
        android:id="@+id/iv7"
        android:contentDescription="7"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        android:layout_below="@+id/iv4"
        android:layout_toLeftOf="@+id/iv5"
        android:layout_toStartOf="@+id/iv5" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:tag="empty"
        android:contentDescription="8"
        android:id="@+id/iv8"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:layout_below="@+id/iv5"
        android:layout_alignLeft="@+id/iv5"
        android:layout_alignStart="@+id/iv5" />

</RelativeLayout>
